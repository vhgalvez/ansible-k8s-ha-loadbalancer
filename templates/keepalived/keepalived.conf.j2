# templates/keepalived/keepalived.conf.j2
# ==========================================
# Keepalived Configuration Template
# Supports Two VIPs: API (6443) and Ingress (80/443)
# Compatible with Flatcar and RHEL-like systems
# ==========================================

global_defs {
    router_id {{ inventory_hostname }}
}

# ==========================================
# HAProxy health-check script
# Works in both Flatcar and RHEL systems
# ==========================================
vrrp_script chk_haproxy {
    script "/usr/bin/pidof haproxy"
    interval 2
    timeout 5
    fall 2
    rise 2
    weight -10
}

# ==========================================
# VIP 1: Kubernetes API (6443)
# ==========================================
vrrp_instance VI_API {
    state BACKUP
    interface {{ keepalived_interface }}
    virtual_router_id 51
    priority {{ keepalived_priority_api | default(100) }}
    advert_int 1

    authentication {
        auth_type {{ keepalived_auth_type }}
        auth_pass {{ keepalived_auth_pass }}
    }

    virtual_ipaddress {
        {{ api_vip }}/24 dev {{ keepalived_interface }}
    }

    track_script {
        chk_haproxy
    }

    track_interface {
        {{ keepalived_interface }}
    }
}

# ==========================================
# VIP 2: Ingress HTTP/HTTPS (80/443)
# ==========================================
vrrp_instance VI_INGRESS {
    state BACKUP
    interface {{ keepalived_interface }}
    virtual_router_id 52
    priority {{ keepalived_priority_ingress | default(100) }}
    advert_int 1

    authentication {
        auth_type {{ keepalived_auth_type }}
        auth_pass {{ keepalived_auth_pass }}
    }

    virtual_ipaddress {
        {{ second_vip }}/24 dev {{ keepalived_interface }}
    }

    track_script {
        chk_haproxy
    }

    track_interface {
        {{ keepalived_interface }}
    }
}